<odoo>
  <data>

    <record id="account_payment_report_sale_payment_invoice_view_form" model="ir.ui.view">
        <field name="name">Sales Payments Report</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_date']" position="before">
                <field name="document_date"/>
            </xpath>
        </field>
    </record>
    <record id="account_payment_report_sale_payment_view_form" model="ir.ui.view">
        <field name="name">Sales Payments Report</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_date']" position="before">
                <field name="document_date"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>